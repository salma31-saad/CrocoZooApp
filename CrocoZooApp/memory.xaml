                        <Border Grid.Row="3" Grid.Column="1" Background="#9B59B6" CornerRadius="10" Margin="5" x:Name="HardCard_3_1">
                            <Grid>
                                <Image x:Name="HardCardImage_3_1" Stretch="Uniform" Margin="5" Visibility="Hidden"/>
                                <Border x:Name="HardCardBack_3_1" Background="#9B59B6" CornerRadius="10">
                                    <Path Data="M 0,0 L 10,10 M 0,10 L 10,0" Stroke="White" StrokeThickness="2" Stretch="Fill" Margin="10"/>
                                </Border>
                            </Grid>
                        </Border>

                        <Border Grid.Row="3" Grid.Column="2" Background="#9B59B6" CornerRadius="10" Margin="5" x:Name="HardCard_3_2">
                            <Grid>
                                <Image x:Name="HardCardImage_3_2" Stretch="Uniform" Margin="5" Visibility="Hidden"/>
                                <Border x:Name="HardCardBack_3_2" Background="#9B59B6" CornerRadius="10">
