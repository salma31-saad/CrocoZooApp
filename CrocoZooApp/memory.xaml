                        <Border Grid.Row="3" Grid.Column="0" Background="#9B59B6" CornerRadius="10" Margin="5" x:Name="HardCard_3_0">
                            <Grid>
                                <Image x:Name="HardCardImage_3_0" Stretch="Uniform" Margin="5" Visibility="Hidden"/>
                                <Border x:Name="HardCardBack_3_0" Background="#9B59B6" CornerRadius="10">
                                    <Path Data="M 0,0 L 10,10 M 0,10 L 10,0" Stroke="White" StrokeThickness="2" Stretch="Fill" Margin="10"/>
                                </Border>
                            </Grid>
