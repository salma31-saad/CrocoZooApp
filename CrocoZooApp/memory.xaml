                            <TextBlock Text="(4x4)" Foreground="White" FontSize="10"
                                       HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,3"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

